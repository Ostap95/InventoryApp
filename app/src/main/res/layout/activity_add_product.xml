<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_image_height"
                android:layout_marginLeft="@dimen/product_image_lef_margin"
                android:layout_marginTop="@dimen/product_image_top_margin"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/product_image_bottom_margin"
                android:id="@+id/imageview_prodcut"
                tools:src="@mipmap/ic_launcher"/>

            <ImageButton
                android:layout_width="@dimen/add_picture_button_width"
                android:layout_height="@dimen/add_picture_button_height"
                android:layout_marginBottom="@dimen/product_image_bottom_margin"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_add"
                android:id="@+id/button_add_picture"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/add_product_edittext_lef_margin"
            android:layout_marginBottom="@dimen/add_product_edittext_bottom_margin"
            android:layout_marginRight="@dimen/add_product_edittext_right_margin"
            android:layout_marginTop="@dimen/add_product_edittext_top_margin"
            android:layout_weight="3">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_product_name"
                android:hint="@string/edittext_product_name_hint"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_product_quantity"
                android:inputType="number"
                android:hint="@string/edittext_quantity_hint"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_product_price"
                android:hint="@string/edittext_price_hint"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_supplier_name"
                android:hint="@string/edittext_supplier_name_hint"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>